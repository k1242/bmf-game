FROM nginx:alpine

# Copy frontend files
COPY index.html /usr/share/nginx/html/bmf/
COPY styles.css /usr/share/nginx/html/bmf/
COPY script.js /usr/share/nginx/html/bmf/
COPY timer.js /usr/share/nginx/html/bmf/
COPY tutorial.js /usr/share/nginx/html/bmf/

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80